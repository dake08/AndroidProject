<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.News" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="fontFamily">@font/aileron_semibold</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subTitleTextColor</item>
        <item name="fontFamily">@font/aileron_regular</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/subTitleTextColor</item>
        <item name="fontFamily">@font/aileron_thin</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/colorPrimaryVariant</item>
    </style>
</resources>